// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Idea {
  id        String   @id @default(uuid())
  text      String
  votes     Int      @default(0)
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([votes])
}
